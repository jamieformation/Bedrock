{% include 'header.twig' %}

  <body>

    <header>
      <div class="container flex">
        <div class="open-menu-btn"><span></span></div>
          <div class="logo">
            <a href="{{ site.link }}"><img class="img-responsive" src="{{ theme.link }}/images/gaffney-guinan-dark.png"></a>
          </div>
          <nav>
            <ul>
              {% for item in main_menu.items %}
              {% if item.current or item.current_item_ancestor %}
                <li class="current-menu-item">
              {% else %}
                <li>
              {% endif %}
                  <a href="{{ item.link }}">{{ item.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      </div>
    </header>

    {% block content %}
  		Sorry, no content
  	{% endblock %}

    {% include 'footer.twig' %}

    {{ function('wp_footer') }}
  </body>
</html>
