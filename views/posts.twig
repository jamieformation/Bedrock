{% extends 'base.twig' %}

{% block content %}

  <section class="posts-page">
    <div class="container">
      <h1>News</h1>
    </div>
    <div class="container">
      <div class="row">

      {% for post in posts %}

        <div class="post">
          <a href="{{ post.link }}" class="image">
            <img src="{{ post.thumbnail.src|resize('flex_small') }}" class="img-responsive" alt="{{ post.title }}">
          </a>
          <div class="content">
            <a class="title" href="{{ post.link }}">{{ post.title }}</a>
            <div class="posted">{{ post.post_date|date('j F Y') }}</div>
            <div class="excerpt">{{ post.preview }}</div>
          </div>
        </div>

    	{% endfor %}

    </div>
  </section>

{% endblock %}
